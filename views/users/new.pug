extends /layouts/application.pug

block content
    h2.text-center Create new user
    .row.mt-3
      .col-sm-6.mx-auto
        +formFor(f, { url: urlFor('users'), method: 'post' })
          +input(f, 'email')
          +input(f, 'firstName')
          +input(f, 'lastName')
          +input(f, 'password', 'Input a password, at least 3 symbols long', { as: 'password' })
          +button(f)