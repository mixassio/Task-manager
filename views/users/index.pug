extends /layouts/application.pug

block content
  h3.text-xs-center Users
  if users.length > 0
    table.table
      tr
        th Name / email
        th Actions
      for user in users
        tr
          td
            a(href=`/users/${user.id}`)= user.fullName
          td
            if userId === user.id
              a(href=`/users/${user.id}/edit`) Edit
              a(href=`/users/${user.id}` data-method='delete' rel='nofollow') Delete
  else
    p Пусто

