extends /layouts/application.pug

block content
    h2.text-center Edit user: #{user.fullName}
    .row.mt-3
      .col-sm-6.mx-auto
        +formFor(f, { url: `/users/${user.id}`, method: 'patch' })
          +input(f, 'email')
          +input(f, 'firstName')
          +input(f, 'lastName')
          +input(f, 'passwordDigest', { as: 'password' })
          +button(f)