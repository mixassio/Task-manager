extends /layouts/application.pug

block content
  h3.text-xs-center Tasks
  .row.mt-3
      .col-sm-6.mx-auto
        if taskStatuses.length > 0
          table.table
            tr
              th taskStatus
              th Actions
            for taskStatus in taskStatuses
              tr
                td
                  a(href=`/taskStatuses/${taskStatus.id}`)= taskStatus.name
                td
                  a(href=`/taskStatuses/${taskStatus.id}/edit`) Edit
                  a(href=`/taskStatuses/${taskStatus.id}` data-method='delete' rel='nofollow') Delete
        else
          p Пусто

